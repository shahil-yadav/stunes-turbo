<footer class="flex flex-wrap items-center gap-1 py-10">
  {
    [
      {
        text: "visit",
        link: "https://stunes-turbo-www.vercel.app",
        label: "stunes",
      },
      {
        text: "using this theme btw to made this blog",
        link: "https://github.com/sun0225SUN/astro-air",
        label: "check it out",
      },
    ].map((item, index) => (
      <>
        {index > 0 && <p class="mx-1">|</p>}
        <p>{item.text}</p>
        <a
          href={item.link}
          class="text-blue-600 transition-colors duration-200 hover:text-blue-800"
          data-umami-event={`footer-${item.label}`}
        >
          {item.label}
        </a>
      </>
    ))
  }
</footer>
